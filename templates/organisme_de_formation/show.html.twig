{% extends 'base.html.twig' %}

{% block title %}OrganismeDeFormation{% endblock %}

{% block body %}
    <h1>OrganismeDeFormation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organisme_de_formation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ organisme_de_formation.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ organisme_de_formation.adresse }}</td>
            </tr>
            <tr>
                <th>Num_tel</th>
                <td>{{ organisme_de_formation.numTel }}</td>
            </tr>
            <tr>
                <th>Email_contact</th>
                <td>{{ organisme_de_formation.emailContact }}</td>
            </tr>
        </tbody>
    </table>
    {% if organisme_de_formation.formations | length > 0 %}
        <table  class="table">
            <thead>
                <tr>
                    <th>
                        Formation
                    </th>
                </tr>
            </thead>
                {% for formation in  organisme_de_formation.formations %}
                    <tr class="redirect" onclick="document.location = '{{ url("app_formation_show", {id:formation.id}) }} '">
                        <td>{{ formation }}</td>
                    </tr>
                {% endfor %}
            <tbody>
        </table>
    {% endif %}
    <a href="{{ path('app_organisme_de_formation_index') }}">back to list</a>

    <a href="{{ path('app_organisme_de_formation_edit', {'id': organisme_de_formation.id}) }}">edit</a>

    {{ include('organisme_de_formation/_delete_form.html.twig') }}
{% endblock %}
