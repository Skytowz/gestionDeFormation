{% extends 'base.html.twig' %}

{% block title %}Salle{% endblock %}

{% block body %}
    <h1>Salle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ salle.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ salle.nom }}</td>
            </tr>
        </tbody>
    </table>
    {% if salle.sessions | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Session
                    </th>
                    <th>Date debut</th>
                    <th></th>
                    <th>Date fin</th>
                </tr>
            </thead>
                {% for session in  salle.sessions %}
                    <tr class="redirect" onclick="document.location = '{{ url("app_session_show", {id:session.id}) }} '">
                        <td>{{ session }}</td>
                        <td>{{ session.dateDebut ? session.dateDebut|date('Y-m-d') : '' }}<td>
                        <td>{{ session.dateFin ? session.dateDebut|date('Y-m-d') : '' }}<td>
                    </tr>
                {% endfor %}
            <tbody>
        </table>
    {% endif %}
    <a href="{{ path('app_salle_index') }}">back to list</a>

    <a href="{{ path('app_salle_edit', {'id': salle.id}) }}">edit</a>

    {{ include('salle/_delete_form.html.twig') }}
{% endblock %}
