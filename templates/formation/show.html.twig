{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ formation.intitule }}</td>
            </tr>
            <tr class="redirect" onclick="document.location = '{{ url("app_organisme_de_formation_show", {id:formation.organismeDeFormation.id}) }} '">
                <th>Organisme de formation</th>
                <td>{{ formation.organismeDeFormation }}
            </tr>
        </tbody>
    </table>
    {% if formation.promotions | length > 0 %}
        <table  class="table">
            <thead>
                <tr>
                    <th>
                        Promotion
                    </th>
                </tr>
            </thead>
                {% for promotion in  formation.promotions %}
                    <tr class="redirect" onclick="document.location = '{{ url("app_promotion_show", {id:promotion.id}) }} '">
                        <td>{{ promotion }}</td>
                    </tr>
                {% endfor %}
            <tbody>
        </table>
    {% endif %}
    <a href="{{ path('app_formation_index') }}">back to list</a>

    <a href="{{ path('app_formation_edit', {'id': formation.id}) }}">edit</a>

    {{ include('formation/_delete_form.html.twig') }}
{% endblock %}
