{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1>Session</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ session.dateDebut ? session.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ session.dateFin ? session.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ session.nom }}</td>
            </tr>
            <tr class="redirect" onclick="document.location = '{{ url("app_formateur_show", {id:session.formateur.id}) }} '">
                <th>Formateur</th>
                <td>{{ session.formateur }}
            </tr>
            <tr class="redirect" onclick="document.location = '{{ url("app_promotion_show", {id:session.promotion.id}) }} '">
                <th>Promotion</th>
                <td>{{ session.promotion }}
            </tr>
            <tr class="redirect" onclick="document.location = '{{ url("app_salle_show", {id:session.salle.id}) }} '">
                <th>Salle</th>
                <td>{{ session.salle }}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_session_index') }}">back to list</a>

    <a href="{{ path('app_session_edit', {'id': session.id}) }}">edit</a>

    {{ include('session/_delete_form.html.twig') }}
{% endblock %}
